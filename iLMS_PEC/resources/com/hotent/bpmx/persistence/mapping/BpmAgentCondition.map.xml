		UPDATE bpm_agent_condition SET
		setting_id_=#{settingId,jdbcType=VARCHAR},
		condition_desc_=#{conditionDesc,jdbcType=VARCHAR},
		condition_=#{condition,jdbcType=VARCHAR},
		agent_id_=#{agentId,jdbcType=VARCHAR},
		agent_name_=#{agentName,jdbcType=VARCHAR}
