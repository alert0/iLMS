/*writeEmailBtn*/
.writeEmailBtn{
	width:3rem;
	height: 3rem;
	background-color: rgb(252,164,10);
	line-height: 3rem;
	text-align: center;
	color: #fff;
	font-size: 1.2rem;
	border-radius: 50%;
	box-shadow: 1px 1px 10px rgba(0,0,0,0.3);
	position: fixed;
	right: 1rem;
